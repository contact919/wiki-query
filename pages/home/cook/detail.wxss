  border-top:none;
}
.pre-title{
  font-size:12px;
  width:auto;
  overflow:hidden;
  text-overflow:ellipsis;
  word-wrap:normal;
  word-break:break-all;
}
.detail-mb{
  margin-bottom: 10px;
}
.short-detail{
  padding-bottom: 5px;
  text-indent: 2em;
}
#cook-pd{
  padding: 8px 30px;
}
#cook-img-size{
  width: 40px;
  height: 40px;
  margin-right:1.2em;
}
#cook-more-word{
  font-size: 14px;
  color:#827100;
}
#more-word-co{
  color: #827100;
