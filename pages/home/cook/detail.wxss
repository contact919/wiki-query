.preimg{
  display: block;
  width:600rpx;
  height: 400rpx;
  padding:12px 15px 12px;
  overflow: hidden;
  margin:0 auto;
  background: #8d8239;
}
.preimg image{
  display: block;
  width:600rpx;
  height: 400rpx;
}
.pre-ul{
  display: block;
  width: auto;
  height:68rpx;
}
.make-time,.pre-comm{
  display: block;
  float: left;
  width: 254rpx;
  height:66rpx;
  padding: 0 8px;
  overflow: hidden;
  line-height: 66rpx;
  font-size: 12px;
  border:1px solid #e9e9e9;
}
.pre-comm{
  margin-left:-1px; 
  margin-bottom: -1px;
}
.li-fl{
  float: left;
}
.li-fr{
